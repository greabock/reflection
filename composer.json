{
    "name": "railt/reflection",
    "type": "library",
    "description": "The Railt Reflection provides Reflection API to read and parse GraphQL SDL",
    "license": "MIT",
    "keywords": [
        "graphql",
        "idl",
        "otd",
        "ast",
        "reflection",
        "reader",
        "parser",
        "llk",
        "introspection"
    ],
    "homepage": "http://railt.org",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/reflection"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-json": "*",
        "ext-mbstring": "*",
        "psr/http-message": "~1.0",
        "railt/io": "1.2.*|dev-master"
    },
    "autoload": {
        "psr-4": {
            "Railt\\Reflection\\": "src"
        }
    },
    "require-dev": {
        "illuminate/support": "~5.6",
        "symfony/var-dumper": "~4.1",
        "guzzlehttp/guzzle": "~6.0",
        "phpunit/phpunit": "^6.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Tests\\Reflection\\": "tests"
        }
    },
    "suggest": {
        "guzzlehttp/guzzle": "(~6.0) Enables GuzzleProvider support"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
